{
  "name": "notion",
  "displayName": "Notion",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:notion.todo"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Notion",
      "properties": {
        "notion.key": {
          "type": "string",
          "default": "",
          "description": "Notion Key"
        }
      }
    },
    "commands": [
      {
        "command": "notion.addKey",
        "title": "Notion: Add Key",
        "icon": "$(gear)"
      },
      {
        "command": "notion.todo.refresh",
        "title": "Notion: Refresh To Do Lists",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "notion",
          "title": "Notion",
          "icon": "media/icon/icon.png"
        }
      ]
    },
    "views": {
      "notion": [
        {
          "type": "tree",
          "id": "notion.todo",
          "name": "To Do Lists"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "notion.todo",
        "contents": "No key added for Notion.\n[Add Key](command:notion.addKey)",
        "when": "config.notion.key == ''"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "notion.addKey",
          "when": "view == notion.todo",
          "group": "navigation@0"
        },
        {
          "command": "notion.todo.refresh",
          "when": "view == notion.todo",
          "group": "navigation@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.46.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "eslint": "^7.6.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "glob": "^7.1.6",
    "mocha": "^8.0.1",
    "typescript": "^3.8.3",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "@notionhq/client": "^0.1.3"
  }
}